{% layout 'layout.liquid'%}
{% block content %}
<div>
    <h2 class="display-6">All Menu</h2>
    <div class="row">
        {% for item in items %}
        <div class="card" style="width: 18rem;">
            <h5 class="card-header">{{ item.title }}</h5>
            <div class="card-body">
                <h5 class="card-title">
                    Ready?: {{ item.ready }}
                </h5>
                <p class="card-text">
                    Body: {{ item.body }}
                </p>
                <p class="card-text">
                    Amount: {{ item.amount }}
                </p>
                <a href="/menu/{{ item.id }}" class="btn btn-info">
                    View {{ item.title }}
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}