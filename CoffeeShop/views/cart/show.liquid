{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            <h5 class="card-header">{{ item.title }}</h5>
            <div class="card-body">
                <h5 class="card-title">
                    to stay?: {{ item.toStay }}
                </h5>
                <p class="card-text">
                    owner: {{ item.owner }}
                </p>
        {% if item.owner == userId %}
        <div class="btn-group">

            <a href="/cart/{{ item.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/cart/{{ item.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}