{% layout 'layout.liquid'%}
{% block content %}
<div>
    <h2 id="menu-header" class="display-6">All Menu</h2>
    <div class="row">
        {% for item in items %}
        <div class="card" style="width: 18rem;">
            <h5 class="card-header">{{ item.title }}</h5>
            <div class="card-body">
                <h5 class="card-title">
                    {{ item.name }}
                </h5>
                <p class="card-text">
                    ${{ item.price }}
                </p>
                <p class="card-text">
                    {{ item.description }}
                </p>
                <p class="card-text">
                    {{ item.category }}
                </p>
                <a href="/menu/new" class="btn btn-info">
                    create(add) {{ example.title }} 
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}